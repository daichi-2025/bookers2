<div class="container">
  <% if @book.errors.any? %>
    <%= @book.errors.count %>error prohibited this obj from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="row">
    <div class="col-md-3">
      <%= render 'left', user: @user %>
    </div>

    <div class="col-8">
      <h1>Books</h1>
        <table>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
          <% @books.each do |book| %>
          <tr>
            <th>
              <%= image_tag book.user.get_profile_image(100,100) %>
            </th>
            <th>
              <%=link_to book_path(book.id) do %>
                <span><%= book.title %></span>
              <% end %>
            </th>
            <th>
              <span><%= book. body %></span>
            </th>
          </tr>
          <% end %>
        </table>
    </div>
  </div>
</div>