<div class="container">
  <div class="row">
    <div class="col-4">
      <%= render 'left', user: @user %>
    </div>

    <div class="col-8">
      <h1>Books</h1>
        <table>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
          <% @books.each do |book| %>
          <tr>
            <th>
              <%= image_tag @user.get_profile_image(100,100) %>
            </th>
            <th>
              <%=link_to book_path(current_user) do %>
                <span><%= book.title %></span>
              <% end %>
            </th>
            <th>
              <span><%= book. body %></span>
            </th>
          </tr>
          <% end %>
        </table>
    </div>
  </div>
</div>