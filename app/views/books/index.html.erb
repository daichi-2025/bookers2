<div class="container">
  <div class="row">
    <div class="col-4">
    <h1>User info</h1>
    <% @users.each do |user| %>

      <% if user.image.attached? %>
        <%= image_tag user.image, size: "200x200" %>
      <% else %>
        <%= image_tag 'no_image', size:"200x200" %>
      <% end %>

    <% end %>

    <p>name</p>
    </div>
    <div class="col-8"></div>
  </div>
</div>