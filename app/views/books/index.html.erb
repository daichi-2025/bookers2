<div class="container">
  <div class="row">
    <div class="col-4">
    <h1>User info</h1>
    
    <%= image_tag @user.get_profile_image(100,100) %>

    <p>name</p>
    <p>introduction</p>

    <div class="btn-wrapper col-10 mx-auto">
        <div class="row">
          <%= link_to edit_user_path(current_user), class:"btn btn-outline-secondary btn-block edit-user" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </div>
    </div>

    <h1>New Book</h1>
    <%= form_with model: Book.new do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>

      <h4>Opinion</h4>
      <%= f.text_area :body %>

      <%= f.submit 'Create Book' %>
    <% end %>

    </div>

    <div class="col-8">
      <h1>Books</h1>
      <% @books.each do |book| %>
        <span><%= book.title %></span>
        <span><%= book. body %></span>
      <% end %>
    </div>
  </div>
</div>