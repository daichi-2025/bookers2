<div class="container">
  <div class="row">
    <div class="col-4">
      <%= render 'left', user: @user %>
    </div>

    <div class="col-8">
      <h1>Book detail</h1>
      <table>
        <tr>

        </tr>
        <tr>
          <%= @book.title %>
        </tr>
        <tr>
          <%= @book.body %>
        </tr>
        <% if @user == current_user %>
        <tr>
          <%= link_to edit_book_path do %>
            Edit
          <% end %>
        </tr>
        <tr>
          <%= link_to book_path, method: :delete do %>
            Destroy
          <% end %>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>