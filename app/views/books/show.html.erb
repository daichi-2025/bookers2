<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'left', user: @user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
          <tbody>
            <tr>
              <td>
                <%= image_tag @user.get_profile_image(100,100) %>
                </br>
                <%= link_to user_path(@user.id) do %> 
                  <% @user.name %>
                <% end %>
              </td>
              <td>
                <%= @book.title %>
              </td>
              <td>
                <%= @book.body %>
              </td>
              <% if @user == current_user %>
                <td>
                  <%= link_to edit_book_path(@book.id), class:"btn btn-sm btn-success" do %>
                    Edit
                  <% end %>
                </td>
                <td>
                  <%= link_to book_path, class:"btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" do %>
                    Destroy
                  <% end %>
                </td>
              <% end %>
            </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>