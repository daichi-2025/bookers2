<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <%# if user_signed_in? %> <!-- コメントアウト中 -->
          <a class="navbar-brand" href="/">
            <span>Bookers</span>
          </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" arai-expanded="false" arai-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto">
                <li>
                  <a class="nav-link text-light" href="/">
                    <i class=2fa-solid fa-home"></i>
                      Home
                  </a>
                </li>
          
      <% if user_signed_in? %>
        <p>Bookers<p>
        <li>     
          <%= link_to "Home", new_user_registration_path %>
        </li>
        <li>
          <%= link_to "Users", new_user_registration_path %>
        </li>
        <li>
          <%= link_to "Books", new_user_registration_path %>
        </li>
        <li>
          <%= link_to "Log out", destroy_user_session_path, method: :delete %>
        </li>
      <% else %>
        <p>Bookers<p>
        <li>
           <%= link_to "Home", new_user_registration_path %>
        </li>
        <li>
          <%= link_to "About", new_user_registration_path %>
        </li>
        <li>
          <%= link_to "Sign up", new_user_registration_path %>
        </li>
        <li>
          <%= link_to "Log in", new_user_session_path %>
        </li>
      <% end %>
    </header>
    <footer>
      
    </footer>
    <%= yield %>
  </body>
</html>