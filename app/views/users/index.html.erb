<div class="container">
  <div class="row">
    <div class="col-4">
      <%= render 'left', user: @user %>
    </div>

    <div class="col-8">
      <h1>Users</h1>
        <table>
          <tr>
            <th>Image</th>
            <th>Name</th>
          </tr>
          <% @users.each do |user| %>
          <tr>
            <th>
              <%= image_tag user.get_profile_image(100,100) %>
            </th>
            <th>
              <span><%= user.name %></span>
            </th>
            <th>
              <%=link_to user_path(user.id) do %>
                Show
              <% end %>
            </th>
          </tr>
          <% end %>
        </table>
    </div>
  </div>
</div>